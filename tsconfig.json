{
  // default settings from https://github.com/ezolenko/rollup-plugin-typescript2/blob/master/tsconfig.json
	"compilerOptions": {
		"target": "es6",
		"noImplicitAny": true,
		"sourceMap": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"listFiles": true,
		"pretty": true,
		"moduleResolution": "node",
		"noEmitOnError": false,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
    "outDir": "./build",
    "removeComments": false,
    "experimentalDecorators": true,
	},
	"include": [
    "src/**/*.ts",
    "typings"
	],
  "compileOnSave": false
}
